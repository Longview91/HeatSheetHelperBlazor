@page "/singleheat/{EventNumber:int}/{HeatNumber:int}"
@using HeatSheetHelperBlazor.Components.Shared
@using HeatSheetHelperBlazor.Services

<h3>Single Heat Details - Event: @EventNumber Heat: @HeatNumber</h3>

@if (heatInfo != null)
{
        <table class="table">
            <thead>
                <tr>
                    <th>Lane</th>
                    <th>Swimmer</th>
                    <th>Team</th>
                    <th>Age</th>
                    <th>Seed Time</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var lane in heatInfo.LaneInfos)
            {
                    <tr>
                        <td>@lane.LaneNumber</td>
                        <td>@lane.SwimmerName</td>
                        <td>@lane.TeamName @lane.RelayTeamLetter</td>
                        <td>@lane.SwimmerAge</td>
                        <td>@lane.SeedTime</td>
                    </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>No heat selected.</p>
}
@if (eventNumbers.Count > 0)
{
        <div style="display: flex; gap: 1em; margin-bottom: 1em;">
            <select @onchange="OnEventNumberChanged" value="@selectedEventNumber">
                <option value="">Select Event</option>
            @foreach (var num in eventNumbers)
            {
                        <option value="@num">@num</option>
            }
            </select>
            <select @onchange="OnHeatNumberChanged" value="@selectedHeatNumber" disabled="@(heatNumbers.Count == 0)">
                <option value="">Select Heat</option>
            @foreach (var num in heatNumbers)
            {
                        <option value="@num">@num</option>
            }
            </select>
        @if (heatsBetween.HasValue)
        {
                    <strong>Heats until event @EventNumber, heat @HeatNumber: @heatsBetween</strong>
        }
        </div>
}
